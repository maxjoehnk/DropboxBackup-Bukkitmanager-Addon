<project>
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.efreak.bukkitmanager.addon.dropboxbackup</groupId>
  <artifactId>dropboxbackup</artifactId>
  <version>1.0</version>
  
  <name>DropboxBackup Addon</name>
  <url>http://dev.bukkit.org/server-mods/bukkitmanager/</url>
  
  <developers>
    <developer>
      <id>e-freak</id>
      <name>Max JÃ¶hnk (e-freak)</name>
      <email>maxjoehnk@gmail.com</email>
      <roles>
        <role>Project Manager</role>
        <role>Developer</role>
      </roles>
    </developer>
  </developers>
  
  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
  </properties>
  
  <scm>
    <developerConnection>scm:git:git@github.com:efreak1996/DropboxBackup-Bukkitmanager-Addon.git</developerConnection>
    <connection>scm:git:git://github.com/efreak1996/DropboxBackup-Bukkitmanager-Addon.git</connection>
    <url>https://github.com/efreak1996/DropboxBackup-Bukkitmanager-Addon/tree/master/</url>
  </scm>
  
  <licenses>
    <license>
      <name>The GNU General Public License Version 3</name>
      <url>http://www.gnu.org/licenses/gpl-3.0.txt</url>
    </license>
  </licenses>
  
  <ciManagement>
    <system>jenkins</system>
    <url>http://98.164.246.75:8080/job/Bukkitmanager Addon - Dropbox Backup</url>
  </ciManagement>
  
  <packaging>jar</packaging>
  
  <dependencies>
    <dependency>
      <groupId>commons-logging</groupId>
      <artifactId>commons-logging</artifactId>
      <version>1.1.1</version>
    </dependency>
    <dependency>
	  <groupId>org.apache.httpcomponents</groupId>
	  <artifactId>httpcore</artifactId>
	  <version>4.2.4</version>
    </dependency>
    <dependency>
	  <groupId>org.apache.httpcomponents</groupId>
	  <artifactId>httpmime</artifactId>
	  <version>4.2.4</version>
    </dependency>
    <dependency>
	  <groupId>org.apache.httpcomponents</groupId>
	  <artifactId>httpclient</artifactId>
	  <version>4.2.4</version>
    </dependency>
    <!-- Repack of Dropbox because there is no official Repo -->
    <dependency>
      <groupId>com.syncthemall</groupId>
      <artifactId>dropbox-java-sdk</artifactId>
      <version>1.5.3.2</version>
    </dependency>
    <dependency>
      <groupId>org.efreak.bukkitmanager</groupId>
      <artifactId>bukkitmanager</artifactId>
      <version>Beta 1.4</version>
    </dependency>
  </dependencies>

  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-source-plugin</artifactId>
        <executions>
          <execution>
            <id>attach-sources</id>
            <goals>
              <goal>jar</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-javadoc-plugin</artifactId>
        <version>2.7</version>
        <configuration>
          <linksource>true</linksource>
        </configuration>
        <executions>
          <execution>
            <id>attach-javadoc</id>
            <goals>
              <goal>jar</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-shade-plugin</artifactId>
        <version>1.4</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <artifactSet>
                <includes>
                  <include>commons-logging:commons-logging</include>
                  <include>org.apache.httpcomponents:httpcore</include>
                  <include>org.apache.httpcomponents:httpmime</include>
                  <include>org.apache.httpcomponents:httpclient</include>
                  <include>com.syncthemall:dropbox-java-sdk</include>
                </includes>
              </artifactSet>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
</project>
